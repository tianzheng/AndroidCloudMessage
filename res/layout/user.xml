<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="您好，欢迎回来！"
        android:textSize="16dp" />

    <Button
        android:id="@+id/cloud_backups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textView"
        android:layout_marginTop="52dp"
        android:background="#545bcb"
        android:padding="10dp"
        android:text="云端备份"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/cloud_restore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/cloud_backups"
        android:layout_marginTop="36dp"
        android:background="#d95b5b"
        android:padding="10dp"
        android:text="云端还原"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/login_text_change_pwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/cloud_restore"
        android:layout_marginTop="36dp"
        android:background="#545bcb"     android:visibility="gone"
        android:padding="10dp"
        android:text="修改密码"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/returnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/login_text_change_pwd"
        android:layout_marginTop="36dp"
        android:background="#d95b5b"
        android:padding="10dp"     android:visibility="gone"
        android:text="注销"
        android:textColor="#ffffff"
        android:textSize="20dp" />

</RelativeLayout>